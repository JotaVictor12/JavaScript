let secretMessage = ['Learning', 'is', 'not', 'about', 'what', 'you', 'get', 'easily', 'the', 'first', 'time,', 'it', 'is', 'about', 'what', 'you', 'can', 'figure', 'out.', '-2015,', 'Chris', 'Pine,', 'Learn', 'JavaScript']
console.log(secretMessage.length); //output: 24
// removing the last item from the array
secretMessage.pop();
console.log(secretMessage.length); //output: 23
// adding two new strings to the array
secretMessage.push('to', 'Program');
console.log(secretMessage.length); //output: 25
// replacing 'easily' for 'rigth'
secretMessage[7] = 'rigth';
console.log(secretMessage);
// Removing the first string from the array
secretMessage.shift();
console.log(secretMessage.length); //output: 24
// Adding 'Programming' to the beggining of the array
secretMessage.unshift('Programming');
console.log(secretMessage);
// removing 'get', 'rigth', 'the', 'first' and 'time' and replacing tham all by 'know' 
secretMessage.splice(6, 5, 'know');
// using .join to concatenate all the strings on the array
console.log(secretMessage.join(' '));
