let userName = 'Jane';
// Here we're using ternary operator to check if the user wants to use a UserName. If the user doesn't insere any name, we're gonna print just a "Hello!"
userName ? console.log(`Hello, ${userName}!`) : console.log('Hello!');
const userquestion = 'Am i going to be rich?';
console.log(`The question ${userName} asked is "${userquestion}".`);
// We're using two methods to assure our random numbers will only be between 0 and 7.
let randomNumber = Math.floor(Math.random() * 8);
let eightBall = '';
switch (randomNumber){
  case randomNumber = 0:
    eightBall = 'It is certain';
    break;
  case randomNumber = 1:
    eightBall = 'It is decidly so';
    break;
  case randomNumber = 2:
    eightBall = 'Reply hazy try again';
    break;
  case randomNumber = 3:
    eightBall = 'Cannot predict now';
    break;
  case randomNumber = 4:
    eightBall = 'Do not count on it';
    break;
  case randomNumber = 5:
    eightBall = 'My sources say no';
    break;
  case randomNumber = 6:
    eightBall = 'Outlook not so good';
    break;
  case randomNumber = 7:
    eightBall = 'Signs point to yes';
    break;  
}
console.log(`The Magic Eight Ball's answer is "${eightBall}!"`);
